@page "/profile"
@attribute [Authorize]
@using Microsoft.AspNetCore.Components.Authorization

<h3>User Profile</h3>

<AuthorizeView>
    <Authorized>
        <p><strong>Name:</strong> @context.User.Identity?.Name</p>
        <p><strong>Email:</strong> @(context.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "N/A")</p>
        <p><strong>Role(s):</strong> @string.Join(", ", context.User.FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value))</p>
        @* Add more profile details and edit functionality here *@
    </Authorized>
</AuthorizeView>

@code {
    // Logic for fetching and updating profile
}
