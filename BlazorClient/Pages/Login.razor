@page "/login"
@inject BlazorClient.Services.IAuthService AuthService
@inject NavigationManager NavigationManager
@using BlazorClient.Models

<h3>Login</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="@loginRequest" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="email">Email:</label>
        <InputText id="email" class="form-control" @bind-Value="loginRequest.Email" />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="loginRequest.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    private LoginRequest loginRequest = new LoginRequest();
    private string? errorMessage;

    private async Task HandleLogin()
    {
        errorMessage = null;
        var result = await AuthService.Login(loginRequest);
        if (result.Successful)
        {
            NavigationManager.NavigateTo("/"); // Navigate to dashboard or home
        }
        else
        {
            errorMessage = result.Error ?? "Login failed.";
        }
    }
}
