@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorClient</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile (@context.User.Identity?.Name)
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="notifications">
                        <span class="bi bi-bell-fill-nav-menu" aria-hidden="true"></span> Notifications
                    </NavLink>
                </div>

                @if (context.User.IsInRole("Teacher"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="create-consultation">
                            <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Create Consultation
                        </NavLink>
                    </div>
                }
                 <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout" @onclick="BeginLogout">
                        <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    // For a clean logout navigation
    [Inject] IAuthService AuthService { get; set; } = default!;
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private async Task BeginLogout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}

